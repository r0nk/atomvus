cat cube.ply | \
 grep -v -e comment -e property -e ply -e format -e end_header | \
 grep -v element | \
 sed -n "$(($(cat cube.ply | ./nvertices)+1)),$(($(cat cube.ply | ./nvertices)+$(cat cube.ply | ./nfaces)))p" | \
 sed "s/^.//g" | \
 sed "s/ /]  va[/g" | \
 sed "s/^.  //g" | \
 sed "s/  /,/g"  | \
 for i in $(seq 0 $(($(cat cube.ply | ./nfaces)-1))) ;
   do echo "model.poly[$i] = (struct polygon) {{$(read l ; echo $l | tr ' ' '\n' )]}};";
 done;
