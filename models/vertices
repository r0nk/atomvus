cat cube.ply | \
 grep -v -e comment -e property -e ply -e format -e end_header | \
 grep -v element | \
 sed -n "1,$(cat cube.ply | \
 ./nvertices)p" | \
 sed "s/ /\n/3" | \
 sed "s/ /\n/3" | \
 tr ' ' ',' | \
 sed "s/^/\{/g" | \
 sed "s/$/\}/g" | \
 sed "N;N;s/\n/,/g"  | \
 for i in $(seq 0 $(($(cat cube.ply | ./nvertices)-1))) ;
	 do echo "va[$i] = (struct vertice) {$(read l ; echo $l | tr ' ' '\n' )};";
 done;
